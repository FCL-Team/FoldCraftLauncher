<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:orientation="vertical"
    android:background="@drawable/bg_game_menu"
    android:clickable="true"
    android:focusable="true">

    <com.tungsten.fcllibrary.component.view.FCLTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DUCKMC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="18dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray" />

    <!-- Главные разделы -->
    <com.tungsten.fcllibrary.component.view.FCLButton
        android:id="@+id/menu_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:drawableLeft="@drawable/ic_home"
        android:layout_marginTop="12dp" />

    <com.tungsten.fcllibrary.component.view.FCLButton
        android:id="@+id/menu_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Library"
        android:drawableLeft="@drawable/ic_library_books" />

    <com.tungsten.fcllibrary.component.view.FCLButton
        android:id="@+id/menu_quick_launch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quick Launch"
        android:drawableLeft="@drawable/ic_play_arrow" />

    <com.tungsten.fcllibrary.component.view.FCLButton
        android:id="@+id/menu_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="News / Changelog"
        android:drawableLeft="@drawable/ic_news" />

    <com.tungsten.fcllibrary.component.view.FCLButton
        android:id="@+id/menu_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:drawableLeft="@drawable/ic_info" />

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray" android:layout_marginTop="12dp" />

    <!-- Скачивание -->
    <com.tungsten.fcllibrary.component.view.FCLButton
        android:id="@+id/menu_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download"
        android:drawableLeft="@drawable/ic_download"
        android:layout_marginTop="8dp" />

    <!-- Создание модов -->
    <com.tungsten.fcllibrary.component.view.FCLButton
        android:id="@+id/menu_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        android:drawableLeft="@drawable/ic_create" />

    <!-- Настройки -->
    <com.tungsten.fcllibrary.component.view.FCLButton
        android:id="@+id/menu_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:drawableLeft="@drawable/ic_settings" />

    <!-- Профиль -->
    <com.tungsten.fcllibrary.component.view.FCLButton
        android:id="@+id/menu_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:drawableLeft="@drawable/ic_person" />

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray" android:layout_marginTop="12dp" />

    <!-- Выход -->
    <com.tungsten.fcllibrary.component.view.FCLButton
        android:id="@+id/menu_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:drawableLeft="@drawable/ic_exit_to_app"
        android:layout_marginTop="8dp" />

</LinearLayout>
