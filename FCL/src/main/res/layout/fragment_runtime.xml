                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:visibility="gone" />

                    <com.tungsten.fcllibrary.component.view.FCLImageView
                        android:id="@+id/cacio11_state"
