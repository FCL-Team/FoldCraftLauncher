<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_game_menu"
    android:padding="20dp">

    <com.tungsten.fcllibrary.component.view.FCLTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JAR Executor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <com.tungsten.fcllibrary.component.view.FCLEditText
        android:id="@+id/edit_jar_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Path to JAR file"
        android:drawableLeft="@drawable/ic_folder"
        android:layout_marginBottom="12dp"/>

    <com.tungsten.fcllibrary.component.view.FCLButton
        android:id="@+id/button_browse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:drawableLeft="@drawable/ic_search"
        android:layout_marginBottom="16dp"/>

    <com.tungsten.fcllibrary.component.view.FCLEditText
        android:id="@+id/edit_arguments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Arguments (optional)"
        android:layout_marginBottom="12dp"/>

    <com.tungsten.fcllibrary.component.view.FCLButton
        android:id="@+id/button_run"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Run JAR"
        android:drawableLeft="@drawable/ic_play_arrow"
        android:layout_marginBottom="20dp"/>

    <com.tungsten.fcllibrary.component.view.FCLTextView
        android:id="@+id/text_output"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Output will appear here..."
        android:textSize="13sp"
        android:background="@drawable/bg_right_menu"
        android:padding="8dp"
        android:gravity="start|top"
        android:scrollbars="vertical"/>
</LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>
