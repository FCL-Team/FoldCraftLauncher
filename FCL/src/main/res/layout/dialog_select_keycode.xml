<?xml version="1.0" encoding="utf-8"?>
<com.tungsten.fcllibrary.component.view.FCLLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.tungsten.fcllibrary.component.view.FCLLinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tungsten.fcllibrary.component.view.FCLTextView
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="@string/edit_button_event_keycodes_keyboard" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <include
                android:layout_marginTop="10dp"
                android:layout_height="168dp"
                android:layout_width="600dp"
                layout="@layout/view_keyboard"/>

            <com.tungsten.fcllibrary.component.view.FCLLinearLayout
                android:id="@+id/mouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.tungsten.fcllibrary.component.view.FCLTextView
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="@string/edit_button_event_keycodes_mouse" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <com.tungsten.fcllibrary.component.view.FCLLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <com.tungsten.fcl.control.view.KeycodeView
                        android:background="@drawable/keycode_view_normal"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="Left"
                        android:textSize="8sp"
                        tools:ignore="HardcodedText,SmallSp"
                        android:padding="0dp"
                        android:gravity="center"
                        android:textAllCaps="false"
                        app:keycode="1000"/>

                    <com.tungsten.fcl.control.view.KeycodeView
                        android:background="@drawable/keycode_view_normal"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="Right"
                        android:textSize="8sp"
                        tools:ignore="HardcodedText,SmallSp"
                        android:padding="0dp"
                        android:gravity="center"
                        android:textAllCaps="false"
                        app:keycode="1002"/>

                    <com.tungsten.fcl.control.view.KeycodeView
                        android:background="@drawable/keycode_view_normal"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="Mid"
                        android:textSize="8sp"
                        tools:ignore="HardcodedText,SmallSp"
                        android:padding="0dp"
                        android:gravity="center"
                        android:textAllCaps="false"
                        app:keycode="1001"/>

                    <com.tungsten.fcl.control.view.KeycodeView
                        android:background="@drawable/keycode_view_normal"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="↑"
                        android:textSize="8sp"
                        tools:ignore="HardcodedText,SmallSp"
                        android:padding="0dp"
                        android:gravity="center"
                        android:textAllCaps="false"
                        app:keycode="1003"/>

                    <com.tungsten.fcl.control.view.KeycodeView
                        android:background="@drawable/keycode_view_normal"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="↓"
                        android:textSize="8sp"
                        tools:ignore="HardcodedText,SmallSp"
                        android:padding="0dp"
                        android:gravity="center"
                        android:textAllCaps="false"
                        app:keycode="1004"/>

                </com.tungsten.fcllibrary.component.view.FCLLinearLayout>

            </com.tungsten.fcllibrary.component.view.FCLLinearLayout>

        </com.tungsten.fcllibrary.component.view.FCLLinearLayout>

    </ScrollView>

    <com.tungsten.fcllibrary.component.view.FCLLinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.tungsten.fcllibrary.component.view.FCLButton
            android:id="@+id/positive"
            android:text="@string/dialog_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.tungsten.fcllibrary.component.view.FCLLinearLayout>

</com.tungsten.fcllibrary.component.view.FCLLinearLayout>